<h2>Видео с Youtube</h2>

<% if videos.any? %>
<div id="videos">
<% pending.each do |video| %>
    <div class="video">
      <ul>
        <div class="id"><%= video.id %></div>
        <div class="URL"><a href="<%= video.url %>"><%= video.url %></a></div>
        <div class="location"><%= video.location_path %></div>
        <div class="status"><%= VideoState.key(video.state) %></div>
        <div class="date"><%= video.updated_at %></div>
    </div>
<% end %>
</div>
<% else %>
<p class="placeholder">Пока нет видео</p>
<% end %>

<a href="<%= routes.new_video_path %>">Загрузить новое видео</a>
<% if active.any? %>
<h3>Скачиваются</h3>
<% active.each do |video| %>
    <div class="video">
      <ul>
        <div class="id"><%= video.id %></div>
        <div class="URL"><a href="<%= video.url %>"><%= video.url %></a></div>
        <div class="location"><%= video.location_path %></div>
        <div class="status"><%= VideoState.key(video.state) %></div>
        <div class="date"><%= video.updated_at %></div>
    </div>
<% end %>
<% end %>

<% if error.any? %>
<h3>Ошибка</h3>
<% error.each do |video| %>
    <div class="video">
      <ul>
        <div class="id"><%= video.id %></div>
        <div class="URL"><a href="<%= video.url %>"><%= video.url %></a></div>
        <div class="location"><%= video.location_path %></div>
        <div class="status"><%= VideoState.key(video.state) %></div>
        <div class="date"><%= video.updated_at %></div>
    </div>
<% end %>
<% end %>

<% if completed.any? %>
<h3>Завершенные</h3>
<% completed.each do |video| %>
    <div class="video">
      <ul>
        <div class="id"><%= video.id %></div>
        <div class="URL"><a href="<%= video.url %>"><%= video.url %></a></div>
        <div class="location"><%= video.location_path %></div>
        <div class="status"><%= VideoState.key(video.state) %></div>
        <div class="date"><%= video.updated_at %></div>
    </div>
<% end %>
<% end %>

<% if unknown.any? %>
<h3>Неизвестное состояние</h3>
<% unknown.each do |video| %>
    <div class="video">
      <ul>
        <div class="id"><%= video.id %></div>
        <div class="URL"><a href="<%= video.url %>"><%= video.url %></a></div>
        <div class="location"><%= video.location_path %></div>
        <div class="status"><%= VideoState.key(video.state) %></div>
        <div class="date"><%= video.updated_at %></div>
    </div>
<% end %>
<% end %>
